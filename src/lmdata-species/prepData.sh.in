#!/bin/bash

# Purpose: fetch species data 
# TODO: move gbif files to version.mk.in in SPECIES_DATA variable

create_species_data () {
  echo "Fetch species data"
  LMURL="http://lifemapper.org/dl"
  curl -L "$LMURL/@SPECIES_DATA@.@ZIPFILE_POSTFIX@" -o ../lmdata-species/@SPECIES_DATA@.@ZIPFILE_POSTFIX@ 
}

### main ###
create_species_data
