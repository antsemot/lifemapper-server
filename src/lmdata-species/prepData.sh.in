#!/bin/bash

# Purpose: fetch species data 

create_species_data () {
   LMURL="http://lifemapper.org/dl"

   echo "Fetch species data @SPECIES_DATA@"
   curl -L "$LMURL/@SPECIES_DATA@.@TARBALL_POSTFIX@" -o ../lmdata-species/@SPECIES_DATA@.@TARBALL_POSTFIX@

   echo "Fetch gbif supporting data"
   curl -L "$LMURL/@GBIF_META@.@TARBALL_POSTFIX@" -o ../lmdata-species/@GBIF_META@.@TARBALL_POSTFIX@     

   echo "Fetch iDigBio list of GBIF-taxonIDs"
   curl -L "$LMURL/@IDIG_LIST@.@TARBALL_POSTFIX@" -o ../lmdata-species/@IDIG_LIST@.@TARBALL_POSTFIX@     
}

### main ###
create_species_data
