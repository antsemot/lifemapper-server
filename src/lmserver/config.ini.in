; Lifemapper configuration file for components
; Create config.ini in this same location with installation-specific parameters
; LIFEMAPPER_CONFIG_FILE will be set upon installation and saved as an 
;    environment variable

[contact]
INSTITUTION_NAME: University of Kansas Biodiversity Institute
ADMIN_NAME: Aimee Stewart
ADMIN_EMAIL: astewart@ku.edu
LOCAL_MACHINE_ID: 


; LmCompute, LmDbServer, LmWebServer, LmClient
[common]
LM_NAMESPACE: http://lifemapper.org
LM_NS_PREFIX: lm
OGC_SERVICE_URL: http://@PUBLIC_FQDN@/ogc


; LmDbServer and LmWebServer
[environment]
IS_DEV: False
APP_PATH: @LMHOME@                      
DATA_PATH: @DATADIR@
TEMP_PATH: /tmp
WEBSITE_ROOT: http://@PUBLIC_FQDN@
MAPSERVER_ROOT: http://@PUBLIC_FQDN@
SMTP_SERVER: smtp.ku.edu
PIPELINE_TROUBLESHOOTERS: astewart@ku.edu, cjgrady@ku.edu
SMTP_SENDER: lifemapper@ku.edu


[pipeline]
POINT_COUNT_MIN = 30
POINT_COUNT_MAX = 1000
PIPELINE_TROUBLESHOOTERS: astewart@ku.edu, cjgrady@ku.edu
WORKER_JOB_LIMIT: 50


; LmDbServer
[dbserver]
; this replaces HL_HOST in LmServerCommon.db.localparams 
; can be host IP not fqdn
DB_HOSTNAME: @DB_FQDN@
CONNECTION_PORT: 6432
LM_SCHEMA: lm3
ARCHIVE_USER: archive
WORKER_JOB_LIMIT: 50


; LmWebServer
[webserver]
WEB_HOSTNAME:  @WEB_FQDN@
LM_LIB_PATH: @LMWEB@
