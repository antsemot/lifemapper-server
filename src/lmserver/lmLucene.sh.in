#!/bin/bash

export PYTHONPATH=@LMHOME@
cd @LMHOME@/LmWebServer/src/lucene

case $1 in
   start)
      echo "Attempting to start Lifemapper Lucene listener"
      @PYBIN@ lmLucene.py start
   ;;
   stop)
      echo "Attempting to stop Lifemapper Lucene listener"
      @PYBIN@ lmLucene.py stop
   ;;
   restart)
      echo "Attempting to restart Lifemapper Lucene listener"
      @PYBIN@ lmLucene.py restart
   ;;
   *)
      echo "Usage: $0 {start|stop|restart}"
      exit 1
   ;;
esac
