#!/bin/bash

# Purpose: checkout distro from lifemapper Github repository and create *.tar.gz files to use in RPM. 
# NOTE: for git checkout will be prompted for valid user/passwd.

SRC=@REPONAME@
URL=https://github.com/lifemapper/

# get distro from lifemapper git and needed updates
checkout_git () {
      echo "Starting GIT checkout from $URL"
      git clone $URL/$SRC
      
      echo "Reset to version #@COMMIT_HASH@ in $SRC"
      if [ -d $SRC ]; then
          cd $SRC
          git reset --hard @COMMIT_HASH@
      else
          echo "Error with SVN checkout from $URL/$SRC: directory $SRC is not created"
      fi
}

collect_configs () {
  conf=$SRC/config/config.ini.in
  if [ ! -f $conf ]; then
      echo "ERROR: File $conf is missing from $SRC "
      return
  fi
}

# create distro files for lmserver 
create_distro () {
  if [ -d $SRC ]; then
      # create lmserver src distro
      echo "Creating lmserver src archive from Github clone"
      tar czf lifemapper-server-@COMMIT_HASH@.tar.gz $SRC/* \
          --exclude=LmCompute \
          --exclude=dist \
          --exclude=LmWebServer/public_html/dl

  else
      echo "GIT cloned directory $SRC is not present"
  fi
}

### main ###
checkout_git
collect_configs
create_distro

