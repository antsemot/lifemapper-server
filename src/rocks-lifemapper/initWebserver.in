#!/bin/bash

# Create directory for cherrypy sessions
gname=lmwriter
GID=`grep $gname: /etc/group`

if [ "$GID" != "" ] ; then
    mkdir -p @LMWEB@
    mkdir -p @LMWEB@/sessions
    mkdir -p @LMWEB@/.python-eggs
    chgrp -R $gname @LMWEB@
    chmod -R g+ws @LMWEB@
else 
    echo "ERROR: group $gname does not exist"
    exit 1
fi

# install solr cron job, run every 4 hours 
crontab -u $gname @PKGROOT@/rocks/etc/solr.cron

