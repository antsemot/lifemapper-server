#!/bin/bash 
#
# Add scripts for scheduled tasks to cron.daily, cron.hourly directories. 
# Called by initLM.
#
usage () 
{
    echo "Usage: $0"
    echo "This script copies maintenance scripts to the cron directories and "
    echo "sets execute permissions."
}

### define varibles
setDefaults () {
    CRON_HOURLY_DIR=/etc/cron.hourly/
    CRON_DAILY_DIR=/etc/cron.daily/
    LOG=/tmp/`/bin/basename $0`.log
    gname=lmwriter
    touch $LOG
    TimeStamp "# Start"
}

TimeStamp () {
    echo $1 `/bin/date` >> $LOG
}

# install hourly cron jobs (solr)
installHourlyTasks () {
    # run hourly 
    install @LMHOME@/rocks/bin/lm_build_solr_index.cron ${CRON_HOURLY_DIR}
    install @LMHOME@/rocks/bin/lm_troubleshoot_jobs.cron ${CRON_HOURLY_DIR}
    echo "Installed hourly tasks to ${CRON_HOURLY_DIR} ..." | tee -a $LOG
}

# install daily cron jobs (security, cleanup, tests)
installDailyTasks () {
    # run daily 
    install @LMHOME@/config/securityUpdates.sh ${CRON_DAILY_DIR}
    install @LMHOME@/rocks/bin/lm_delete_old_anon.cron ${CRON_DAILY_DIR}
    install @LMHOME@/rocks/bin/lm_run_server_tests.cron ${CRON_DAILY_DIR}
    echo "Installed daily tasks to ${CRON_DAILY_DIR} ..." | tee -a $LOG
}

#### Main ####
if [ $# -ne 0 ]; then
    usage
    exit 0
fi 

setDefaults
installHourlyTasks
installDailyTasks
TimeStamp "# End"
