#!/bin/bash

export PYTHONPATH=@PKGROOT@
export LIFEMAPPER_SERVER_CONFIG_FILE=@PKGROOT@/config/config.lmserver.ini
export LUCENE_DIR=@PKGROOT@/LmWebServer/lucene

case $1 in
   start)
      echo "Attempting to start Lifemapper Lucene listener"
      @PYBIN@ $LUCENE_DIR/lmLucene.py start
   ;;
   stop)
      echo "Attempting to stop Lifemapper Lucene listener"
      @PYBIN@ $LUCENE_DIR/lmLucene.py stop
   ;;
   restart)
      echo "Attempting to restart Lifemapper Lucene listener"
      @PYBIN@ $LUCENE_DIR/lmLucene.py restart
   ;;
   *)
      echo "Usage: $0 {start|stop|restart}"
      exit 1
   ;;
esac
