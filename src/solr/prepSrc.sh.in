#!/bin/bash

# Purpose: Fetch Solr source  

# SOLR_URL="http://apache.mirrors.tds.net/lucene/solr/8.1.1/solr-8.1.1-src.tgz"
# JTS_URL="https://sourceforge.net/projects/jts-topo-suite/files/jts/1.8/"
# JTS_URL="http://central.maven.org/maven2/org/locationtech/jts/jts-core/1.15.0/"

SOLR_URL="http://archive.apache.org/dist/lucene/@ARCHIVENAME@/@VERSION@/"
SOLR_PKG="@ARCHIVENAME@-@VERSION@.@TARBALL_POSTFIX@"
SOLR_CHK_URL="https://www.apache.org/dist/lucene/solr/@VERSION@"
SOLR_SHA="@ARCHIVENAME@-@VERSION@.@TARBALL_POSTFIX@.sha512"

get_source_file () {
  echo "Fetch solr code"
  wget "$SOLR_URL/$SOLR_PKG" 
}

check_source_file() {
  echo "Check downloaded solr code"
  wget "$SOLR_CHK_URL/$SOLR_SHA" 
  
  IS_OK=`/usr/bin/sha512sum -c $SOLR_SHA | awk '{print $2}'`
  if [ $IS_OK != 'OK' ]; then
  	 echo "Source code sha512 sum does not match, do NOT proceed."
  fi
}

### main ###
get_source_file
check_source_file
