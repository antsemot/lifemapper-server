#!/bin/bash

# Purpose: Fetch Solr and JTS source  

JTS_URL="https://sourceforge.net/projects/jts-topo-suite/files/jts/1.8/"
SOLR_URL="http://archive.apache.org/dist/lucene/@ARCHIVENAME@/@VERSION@/"
SOLR_PKG=@ARCHIVENAME@-@VERSION@.@TARBALL_POSTFIX@

get_source_files () {
  echo "Fetch solr and jts source code"
  # wget "$JTS_URL/@JTS@" 
  wget "$SOLR_URL/$SOLR_PKG" 
}

### main ###
get_source_files
