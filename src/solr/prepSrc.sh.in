#!/bin/bash

# Purpose: Fetch Solr and JTS source  

JTS_URL="http://www.vividsolutions.com/jts/bin/"
SOLR_URL="http://mirror.metrocast.net/apache/lucene/$(ARCHIVENAME)/$(VERSION)/"
SOLR_PKG=$(ARCHIVENAME)-$(VERSION).$(TARBALL_POSTFIX)

get_source_files () {
  echo "Fetch solr and jts source code"
  curl -L "$JTS_URL/@JTS@" -o @JTS@ 
  curl -L "$SOLR_URL/$SOLR_PKG" -o $SOLR_PKG 
}

### main ###
get_source_files
